<?xml version="1.0" encoding="utf-8"?>
<!--
   This defines the data extraction rules for the app's sensitive data
   It restricts what data can be extracted during backups or device-to-device transfers
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Explicitly excluding all app data from cloud backup for security -->
        <exclude domain="root" />
        <exclude domain="sharedpref" />
        <exclude domain="database" />
        <exclude domain="external" />
    </cloud-backup>
    <device-transfer>
        <!-- Explicitly excluding all app data from device transfers for security -->
        <exclude domain="root" />
        <exclude domain="sharedpref" />
        <exclude domain="database" />
        <exclude domain="external" />
    </device-transfer>
</data-extraction-rules>